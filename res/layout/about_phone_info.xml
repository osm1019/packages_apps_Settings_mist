<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:id="@+id/about_phone_info"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="?android:listPreferredItemHeightSmall">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/firmware_area"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1.5"
            android:layout_marginEnd="7dp">

            <FrameLayout
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:minWidth="160dp">

                <!-- Phone Image on Top -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/phone_image"
                    android:layout_width="100dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="18dp"
                    app:strokeColor="?android:attr/textColorPrimary"
                    app:strokeWidth="3dp">

                    <com.android.utils.aboutWallpaperView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                        android:elevation="0dp"
                        android:contentDescription="@null"
                        android:orientation="vertical" />

                </com.google.android.material.card.MaterialCardView>
                
            </FrameLayout>
        </LinearLayout>
        
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1.5"
            android:layout_marginStart="7dp">

            <LinearLayout
                android:gravity="start|center"
                android:orientation="vertical"
                android:id="@+id/android_version_area"
                android:background="@drawable/cardview_single"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1.0"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/android_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="@string/android_version"
                    android:textAppearance="?android:attr/textAppearanceListItem"/>

                <TextView
                    android:id="@+id/android_version_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:singleLine="false"
                    style="@style/PreferenceSummaryTextStyle"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="start|center"
                android:orientation="vertical"
                android:id="@+id/maintainer_area"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/cardview_single"
                android:layout_marginBottom="5dp"
                android:layout_weight="1.0"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/maintainer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="@string/Mist_maintainer"
                    android:textAppearance="?android:attr/textAppearanceListItem"/>

                <TextView
                    android:id="@+id/maintainer_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:singleLine="false"
                    style="@style/PreferenceSummaryTextStyle"/>
            </LinearLayout>
        </LinearLayout>I
    </LinearLayout>
</LinearLayout>
