<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="190.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="190.0dip"
        android:layout_marginHorizontal="16.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginEnd="8.0dip">
            <LinearLayout
                android:gravity="start|center"
                android:orientation="vertical"
                android:id="@+id/dashboard_about"
                android:background="@drawable/mist_card_background_sin_big"
                android:padding="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24.0dip"
                        android:layout_height="24.0dip"
                        android:src="@drawable/ic_settings_about_device"
                        android:tint="?android:attr/textColorPrimary" />
                    <TextView
                        android:textSize="16.0dip"
                        android:textColor="?android:attr/textColorPrimary"
                        android:id="@+id/dashboard_about_title"
                        android:ellipsize="marquee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_settings"
                        android:singleLine="true"
                        android:layout_marginStart="6.0dip" />
                </LinearLayout>
                <TextView
                    android:textSize="13.0dip"
                    android:textColor="?android:attr/textColorSecondary"
                    android:id="@+id/dashboard_about_summary"
                    android:ellipsize="marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_aboutx"
                    android:layout_marginTop="10.0dip"
                    android:alpha="0.7"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:gravity="start|center"
                android:orientation="vertical"
                android:id="@+id/dashboard_diaplay"
                android:background="@drawable/mist_card_background_sin_big"
                android:padding="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24.0dip"
                        android:layout_height="24.0dip"
                        android:src="@drawable/ic_settings_display_white"
                        android:tint="?android:attr/textColorPrimary" />
                    <TextView
                        android:textSize="16.0dip"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/display_settings"
                        android:singleLine="true"
                        android:layout_marginStart="6.0dip" />
                </LinearLayout>
                <TextView
                    android:textSize="13.0dip"
                    android:textColor="?android:attr/textColorSecondary"
                    android:ellipsize="marquee"
                    android:id="@+id/dashboard_diaplay_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/display_dashboard_summary"
                    android:alpha="0.7"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:orientation="vertical"
            android:id="@+id/dashboard_labs"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginStart="8.0dip"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="24.0dip"
            app:cardElevation="0.0dip"
            app:strokeWidth="0.0dip">
            <com.mist.mistify.widget.WallpaperCardView
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
            <View
                android:background="?androidprv:attr/colorSurface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.7" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:tint="?android:attr/textColorPrimary"
                    android:src="@drawable/ic_mist_logo" />
                <TextView
                    android:textSize="18.0dip"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40.0dip"
                    android:text="Mistify"
                    android:singleLine="true" />
                <TextView
                    android:textSize="15.0dip"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="./beyond The Clouds"
                    android:singleLine="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
